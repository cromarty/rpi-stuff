# These exports should be added to the end of your .bashrc file to do a kernel
# build the way I do it using my knl_* scripts
#
# To add this file to your .bashrc:
#
# cat exports >> ~/.bashrc
#
# The directory where the kernel source tree and the build directory are located
export KERNEL_ROOT=~/linux-rpi-3.6.y

# The sub-directory of ${KERNEL_ROOT} where the source tree is located
export KERNEL_SRC=${KERNEL_ROOT}/linux/

# The location of the cross-compiler.  Note this might change with the
# version number of the tool-chain and whether
# you are building a hard or soft-float kernel.
# There are two different tool-chain sets, one for HF kernels and one for soft
export CCPREFIX=/usr/tools/arm-bcm2708/arm-bcm2708hardfp-linux-gnueabi/bin/arm-bcm2708hardfp-linux-gnueabi-

# A directory under ${KERNEL_ROOT} where modules will be built
export MODULES_TEMP=${KERNEL_ROOT}/modules

# A sub-directory of ${KERNEL_ROOT} where the kernel will be built
export KERNEL_BUILD=${KERNEL_ROOT}/rpi-build
