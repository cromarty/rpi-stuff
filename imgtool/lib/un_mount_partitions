
un_mount_partitions() {
	local WORKDIR=${1}

	if [ ! -f "${WORKDIR}/imgtool-mount-points" ]; then
		echo $(gettext "Could not find the file imgtool-mount-points in the work directory") ; echo
		exit 1
	fi

	echo $(gettext "umount partitions") ; echo
	cat ${WORKDIR}/imgtool-mount-points | cut -f3 -d: | \
	while read MOUNTPOINT
	do
		echo $(eval_gettext "umount \$MOUNTPOINT") ; echo
		umount "${MOUNTPOINT}"
	done

}
